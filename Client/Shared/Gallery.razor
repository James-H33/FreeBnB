@using FreeBnB.Shared;

@if (Photos.Count != 0)
{
  <div class="gallery">
    <div class="gallery__main-photo" style="background-image: url(@mainPhoto)"></div>
    <div class="gallery__multi-photos">
      @for(var i = 0; i < Photos.Count; i++)
      {
        var photo = Photos[i];

        <div class="gallery__multi-photo" style="background-image: url(@photo.Url)">
          <!-- <img src="@photo.Url" /> -->
        </div>
      }
    </div>
  </div>
}

@code {
  [Parameter]
  public List<Photo> Photos { get; set; } = new List<Photo>();

  public string mainPhoto { get => GetMainPhoto(); }

  private string GetMainPhoto()
  {
    var photo = Photos.FirstOrDefault();

    if (photo != null)
    {
      return photo.Url;
    }

    return "";
  }
}
